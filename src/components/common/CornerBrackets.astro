---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  opacity?: number;
  class?: string;
}

const {
  size = 'md',
  opacity = 30,
  class: className = ''
} = Astro.props;

const sizeMap = {
  sm: 'w-3 h-3',
  md: 'w-4 h-4',
  lg: 'w-6 h-6',
};
---

<div class:list={['absolute inset-0 pointer-events-none', className]}>
  <div class:list={[
    'absolute top-0 left-0 border-t border-l border-electric-cyan transition-colors',
    sizeMap[size]
  ]} style={`opacity: ${opacity / 100}`} />
  <div class:list={[
    'absolute top-0 right-0 border-t border-r border-electric-cyan transition-colors',
    sizeMap[size]
  ]} style={`opacity: ${opacity / 100}`} />
  <div class:list={[
    'absolute bottom-0 left-0 border-b border-l border-electric-cyan transition-colors',
    sizeMap[size]
  ]} style={`opacity: ${opacity / 100}`} />
  <div class:list={[
    'absolute bottom-0 right-0 border-b border-r border-electric-cyan transition-colors',
    sizeMap[size]
  ]} style={`opacity: ${opacity / 100}`} />
</div>
