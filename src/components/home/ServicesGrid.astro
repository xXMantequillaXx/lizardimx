---
import { Brain, Shield, Megaphone } from 'lucide-react';
import Card from '../common/Card.astro';
import SectionContainer from '../common/SectionContainer.astro';

const mainServices = [
  {
    icon: Brain,
    title: 'AI Consulting',
    description: 'Pragmatic AI strategy and implementation for businesses ready to leverage artificial intelligence.',
    href: '/services/ai-consulting',
    image: '/assets/sections/ai-consulting.png',
  },
  {
    icon: Shield,
    title: 'Security Services',
    description: 'Comprehensive protection across cyber and physical domains for businesses and residences.',
    href: '/services/security',
    image: '/assets/sections/integrated-security.png',
  },
  {
    icon: Megaphone,
    title: 'Brand Protection',
    description: 'Reputation defense, crisis communications, and strategic messaging for information resilience.',
    href: '/services/brand-protection',
    image: '/assets/sections/strategic-comms.png',
  },
];
---

<SectionContainer id="services" class="bg-tactical-navy/20">
  <!-- Section Header -->
  <div class="mb-12">
    <div class="flex items-center gap-3 mb-4">
      <span class="font-mono text-xs text-electric-cyan tracking-wider">SEC-01</span>
      <div class="h-px flex-1 bg-electric-cyan/20"></div>
    </div>
    <h2 class="font-display text-3xl md:text-4xl text-signal-white mb-4">
      Operations & Services
    </h2>
    <p class="text-intel-gray max-w-2xl">
      Comprehensive solutions for the modern security landscape. From AI implementation to integrated defense systems.
    </p>
  </div>

  <!-- Services Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {mainServices.map((service) => {
      const Icon = service.icon;
      return (
        <Card>
          <!-- Background Image -->
          <div class="absolute inset-0 overflow-hidden rounded-lg">
            <img
              src={service.image}
              alt=""
              class="w-full h-full object-cover opacity-20 transition-opacity duration-300 group-hover:opacity-30"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-rich-black via-rich-black/80 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="relative z-10">
            <div class="mb-4">
              <div class="inline-flex p-3 bg-electric-cyan/10 rounded">
                <Icon className="w-8 h-8 text-electric-cyan" />
              </div>
            </div>
            <h3 class="font-display text-xl text-signal-white mb-3">
              {service.title}
            </h3>
            <p class="text-intel-gray text-sm mb-4 leading-relaxed">
              {service.description}
            </p>
            <a
              href={service.href}
              class="inline-flex items-center gap-2 text-electric-cyan hover:gap-3 transition-all text-sm font-display uppercase tracking-wider"
            >
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </Card>
      );
    })}
  </div>
</SectionContainer>
