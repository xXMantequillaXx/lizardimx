---
import Button from '../common/Button.astro';
import StatusIndicator from '../common/StatusIndicator.astro';
import CoordinateStamp from '../common/CoordinateStamp.astro';
import CornerBrackets from '../common/CornerBrackets.astro';
import ScanLine from '../ui/ScanLine.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-tactical-navy/50 to-rich-black"></div>

  <!-- Scan Line Animation -->
  <ScanLine />

  <!-- Corner Brackets -->
  <CornerBrackets size="lg" opacity={50} />

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
    <!-- Logo -->
    <div class="mb-8 flex justify-center">
      <div class="relative">
        <div class="h-24 w-24 bg-electric-cyan/10 rounded-lg flex items-center justify-center animate-pulse-glow">
          <span class="font-display font-bold text-electric-cyan text-4xl">L</span>
        </div>
      </div>
    </div>

    <!-- Headline -->
    <h1 class="font-display text-4xl md:text-6xl lg:text-7xl text-signal-white mb-6 tracking-wider">
      LIZARDI CONSULTING
    </h1>

    <!-- Tagline -->
    <p class="text-intel-gray text-lg md:text-xl mb-4">
      Information, Media & Security Consulting
    </p>

    <p class="text-muted-steel text-sm md:text-base mb-12 max-w-2xl mx-auto">
      Protecting your business, data, and reputation in the digital age.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
      <Button href="/contact" size="lg">
        Initiate Consultation
      </Button>
      <Button href="/services" variant="secondary" size="lg">
        View Operations
      </Button>
    </div>

    <!-- Status & Coordinates -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm">
      <StatusIndicator status="operational" />
      <span class="hidden sm:block text-steel-gray">|</span>
      <CoordinateStamp />
    </div>
  </div>

  <!-- Grid Overlay (subtle) -->
  <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: linear-gradient(rgba(0, 217, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 217, 255, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
</section>
