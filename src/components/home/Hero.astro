---
import Button from '../common/Button.astro';
import StatusIndicator from '../common/StatusIndicator.astro';
import CoordinateStamp from '../common/CoordinateStamp.astro';
import CornerBrackets from '../common/CornerBrackets.astro';
import ScanLine from '../ui/ScanLine.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Tileable Background Pattern -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-tactical-navy/50 to-rich-black"></div>
    <div
      class="absolute inset-0 opacity-[0.15]"
      style="background-image: url('/assets/patterns/tactical-grid.png'); background-size: 400px 400px; background-repeat: repeat;"
    ></div>
  </div>

  <!-- Scan Line Animation -->
  <ScanLine />

  <!-- Corner Brackets -->
  <CornerBrackets size="lg" opacity={50} />

  <!-- Content -->
  <div class="relative z-10 w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Logo -->
    <div class="mb-6 md:mb-8 flex justify-center">
      <div class="relative">
        <img
          src="/assets/logos/logo-badge.png"
          alt="Lizardi Consulting"
          class="h-20 sm:h-24 md:h-28 w-auto animate-pulse-glow"
        />
      </div>
    </div>

    <!-- Headline -->
    <h1 class="font-display text-3xl sm:text-5xl md:text-6xl lg:text-7xl text-signal-white mb-4 md:mb-6 tracking-wider leading-tight">
      LIZARDI CONSULTING
    </h1>

    <!-- Tagline -->
    <p class="text-intel-gray text-base sm:text-lg md:text-xl mb-3 md:mb-4 px-4">
      Information, Media & Security Consulting
    </p>

    <p class="text-muted-steel text-sm md:text-base mb-8 md:mb-12 max-w-2xl mx-auto px-4 leading-relaxed">
      Protecting your business, data, and reputation in the digital age.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-8 md:mb-12 max-w-md mx-auto px-4">
      <Button href="/contact" size="lg" class="w-full sm:w-auto">
        Initiate Consultation
      </Button>
      <Button href="/services" variant="secondary" size="lg" class="w-full sm:w-auto">
        View Operations
      </Button>
    </div>

    <!-- Status & Coordinates -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 text-sm px-4">
      <StatusIndicator status="operational" />
      <span class="hidden sm:block text-steel-gray">|</span>
      <CoordinateStamp />
    </div>
  </div>

  <!-- Grid Overlay (subtle) -->
  <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: linear-gradient(rgba(0, 217, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 217, 255, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
</section>
